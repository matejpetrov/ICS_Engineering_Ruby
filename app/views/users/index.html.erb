<div class="container">
	


	<div class="row">
		<div class="col-md-12">
			
			<h2>Manage users</h2>

		</div>
	</div>

	<div class="row">
		
		<div class="col-md-12">
			
			<table class="table table-hover">
				
				<thead class="thead">
					<tr>
						<th>Username</th>
						<th>Name</th>
						<th>Surname</th>
						<th>E-mail</th>
						<th>Role</th>
						<th>Activated</th>
					</tr>
				</thead>

				<tbody>
					
					<% @users.each do |user| %>
					    <%= render user %>
				    <% end %>

				</tbody>


			</table>


		</div>

	</div>



</div>
